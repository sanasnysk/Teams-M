<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    android:layout_margin="2dp"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBlue_L"
        android:layout_margin="1dp"
        tools:ignore="DisableBaselineAlignment">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_00015s"
            tools:ignore="ContentDescription,InefficientWeight,RtlHardcoded" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/journal_site_name_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="현장"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:background="@color/colorLightBlue_L"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="Site Name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/journal_totalday_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="일수"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:background="@color/colorLightBlue_L"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_total_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="day"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_amount_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="금액"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:background="@color/colorLightBlue_L"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="Site Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/journal_site_leader_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="팀장"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:background="@color/colorLightBlue_L"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_leader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="Team Leader"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_manager_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="경비"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:background="@color/colorLightBlue_L"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="2dp"
                    android:layout_margin="1dp"
                    android:text="Site Cost"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>