<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        android:layout_margin="2dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBlue_L"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_margin="1dp"
            tools:ignore="DisableBaselineAlignment">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_00034s"
                tools:ignore="ContentDescription,InefficientWeight,RtlHardcoded" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                tools:ignore="UselessLeaf">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/income_team_name_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="팀 이름"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:background="@color/colorLightBlue_L"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="Team Name"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/income_team_amount_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="금액"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:background="@color/colorLightBlue_L"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="Team Amount"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/income_team_collect_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="입금"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:background="@color/colorLightBlue_L"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_collect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="Team Collect"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_tax_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="세금"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:background="@color/colorLightBlue_L"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_tax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="Team Tax"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/income_team_balanceday_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="잔일"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:background="@color/colorLightBlue_L"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_balance_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="Balance Day"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_balance_amount_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="잔액"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:background="@color/colorLightBlue_L"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                    <TextView
                        android:id="@+id/income_team_balance_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="Balance Amount"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        tools:ignore="HardcodedText,RtlCompat" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>